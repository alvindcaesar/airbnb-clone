<div class="container">

  <h2>Create New Room</h2><br>

  <%= form_for @room do |f| %>

    <div class="mb-3">
      <%= f.label :image, class:"form-label" %>
      <%= f.file_field :image, class:"form-control", multiple: true %>
    </div>

    <div class="mb-3">
      <%= f.label :description, class:"form-label" %>
      <%= f.text_field :description, class:"form-control" %>
    </div>

    <div class="mb-3">
      <%= f.label :home_type, class:"form-label" %>
      <%= f.text_field :home_type, class:"form-control" %>
    </div>

    <div class="mb-3">
      <%= f.label :bedroom, class:"form-label" %>
      <%= f.number_field :bedroom, class:"form-control" %>
    </div>

    <div class="mb-3">
      <%= f.label :bathroom, class:"form-label" %>
      <%= f.number_field :bathroom, class:"form-control" %>
    </div>

    <div class="mb-3">
      <%= f.label :address, class:"form-label" %>
      <%= f.text_area :address, class:"form-control" %>
    </div>

    <div class="mb-3">
      <%= f.label :price, class:"form-label" %>
      <%= f.number_field :price, class:"form-control" %>
    </div>

    <%= f.submit  %>

  <% end %>
</div>
